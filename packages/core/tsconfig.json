{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "declaration": true
  },
  "references": [
    { "path": "./services" },
    { "path": "./hooks" },
    { "path": "./infrastructure" }
  ],
  "exclude": ["node_modules", "dist"]
}
